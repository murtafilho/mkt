# ==========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Marketplace B2C Multivendor
# ==========================================
# ⚠️ IMPORTANT: Copy this file to .env and fill in the production values
# ⚠️ NEVER commit .env to version control
# ==========================================

# Application
APP_NAME="Vale do Sol Marketplace"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/Sao_Paulo
APP_URL=https://valedosol.com.br
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

# Application Maintenance
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_production_database_name
DB_USERNAME=your_production_database_user
DB_PASSWORD=your_strong_production_password

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
CACHE_PREFIX=

# Queue
QUEUE_CONNECTION=database

# Mail Configuration (Production SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-email-provider.com
MAIL_PORT=587
MAIL_USERNAME=noreply@valedosol.com.br
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@valedosol.com.br"
MAIL_FROM_NAME="${APP_NAME}"

# Mercado Pago (PRODUCTION Credentials)
# ⚠️ CRITICAL: Use PRODUCTION credentials, not TEST
# Get from: https://www.mercadopago.com.br/developers/panel
MERCADOPAGO_ACCESS_TOKEN=APP-XXXXXXXXXXXXXXXXXXXX-PRODUCTION
MERCADOPAGO_PUBLIC_KEY=APP-XXXXXXXXXXXXXXXXXXXX-PRODUCTION
MERCADOPAGO_WEBHOOK_SECRET=your_webhook_secret_from_mp_panel

# Filesystem
FILESYSTEM_DISK=public

# Spatie Media Library
MEDIA_DISK=public

# Broadcasting (if using WebSockets in future)
BROADCAST_CONNECTION=null

# Optional Services
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Security Settings
# ⚠️ Set secure headers in production
SECURE_HEADERS=true
FORCE_HTTPS=true

# Performance
# Opcache recommended in production
OPCACHE_ENABLE=true

# ==========================================
# DEPLOYMENT CHECKLIST
# ==========================================
# Before deploying to production:
#
# 1. Set APP_DEBUG=false
# 2. Generate new APP_KEY: php artisan key:generate
# 3. Set strong DB_PASSWORD
# 4. Configure production MAIL settings
# 5. Use PRODUCTION Mercado Pago credentials
# 6. Set MERCADOPAGO_WEBHOOK_SECRET
# 7. Configure SSL certificate (HTTPS)
# 8. Run: php artisan config:cache
# 9. Run: php artisan route:cache
# 10. Run: php artisan view:cache
# 11. Run: php artisan migrate --force
# 12. Run: php artisan db:seed --class=RolePermissionSeeder
# 13. Run: php artisan db:seed --class=CategoriesSeeder
# 14. Run: php artisan db:seed --class=SettingsSeeder
# 15. Run: php artisan storage:link
# 16. Set proper file permissions (755 for directories, 644 for files)
# 17. Restrict bootstrap/cache and storage permissions
# 18. Configure queue worker (supervisor or systemd)
# 19. Set up backup cron job
# 20. Configure log rotation
#
# ==========================================
